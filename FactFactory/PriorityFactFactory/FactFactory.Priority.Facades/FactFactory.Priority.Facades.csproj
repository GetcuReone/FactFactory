<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <DocumentationFile>FactFactory.Priority.Facades.xml</DocumentationFile>
        <RootNamespace>GetcuReone.FactFactory.Priority.Facades</RootNamespace>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
        <SignAssembly>true</SignAssembly>
        <AssemblyOriginatorKeyFile>$(snkFilePath)</AssemblyOriginatorKeyFile>
        <DelaySign>false</DelaySign>
        <AssemblyVersion>$(majorVersion).0.0.0</AssemblyVersion>
        <FileVersion>$(majorVersion).0.0.0</FileVersion>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\FactFactory.Facades\FactFactory.Facades.csproj" />
      <ProjectReference Include="..\FactFactory.Priority.Common\FactFactory.Priority.Common.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Update="FactFactory.Priority.Facades.xml">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>

</Project>
